extends ../layout

block main

  .row
    .col-lg-9
      h1.my-4 #{item_group.name}
      .row
        each item in group_items
          .col-lg-4.col-md-6.mb-4
            .card.h-100
              a(href=item.url)
                img.card-img-top.img-fluid(src='http://placehold.it/700x400', alt='')
              .card-body
                h4.card-title
                  a(href=item.url) #{item.name}
                h5 $#{item.formatted_price}
                p.card-text #{item.description}
              .card-footer
              
        
