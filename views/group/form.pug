extends ../layout

block main
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='group_name') Group:
      input#name.form-control(
        type='text', 
        placeholder='Fantasy, Poetry etc.' 
        name='group_name' 
        value=(undefined===group ? '' : group.name))
      label(for='img_100') Square Image (100 by 100 pixels):
      input#img_100.form-control(
        type='text' 
        placeholder='Small square image url (100 by 100 pixels)' 
        name='img_100'  
        value=(undefined===group ? '' : group.img_100)
        )
      input#id.form-control(
        type='hidden' 
        name='id'  
        value=(undefined===group ? '' : group._id)
        )
    button.btn.btn-primary(type='submit') Submit

block alert
  if errors 
    ul.alert.alert-danger
      for error in errors
        li!= error.msg