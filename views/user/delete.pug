extends ../layout

block main
  h1 #{title}: #{user.name}
  p= user.description
  
  p Do you really want to delete this user?
  
  form(method='POST' action='')
    div.form-group
      input#itemid.form-control(
        type='hidden'
        name='id'
        required='true'
        value=user._id
        )
    button.btn.btn-primary(type='submit') Delete