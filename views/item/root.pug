extends ../layout

block main

  .row
    .col-lg-3
      h1.my-4.text-dark #{title}
      .list-group
        each group in item_groups
          a.list-group-item.border-primary.text-primary(href=group.url) #{group.name}
    .col-lg-9
      #carouselExampleIndicators.carousel.slide.my-4(data-ride='carousel')
        ol.carousel-indicators
          li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
          li(data-target='#carouselExampleIndicators', data-slide-to='1')
          li(data-target='#carouselExampleIndicators', data-slide-to='2')
        .carousel-inner(role='listbox')
          .carousel-item.active
            img.d-block.img-fluid(src='https://res.cloudinary.com/execool/image/upload/v1535999041/cool-web-store/index/caleb-stokes-478991-unsplash-crop.jpg', alt='by Caleb Stokes on Unsplash')
          .carousel-item
            img.d-block.img-fluid(src='https://res.cloudinary.com/execool/image/upload/v1535999041/cool-web-store/index/mohammad-saifullah-425025-unsplash-crop.jpg', alt='by Mohammad Saifullah on Unsplash')
          .carousel-item
            img.d-block.img-fluid(src='https://res.cloudinary.com/execool/image/upload/v1535999041/cool-web-store/index/pau-casals-664534-unsplash-crop.jpg', alt='by Pau Casals on Unsplash')
        a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
          span.carousel-control-prev-icon(aria-hidden='true')
          span.sr-only Previous
        a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
          span.carousel-control-next-icon(aria-hidden='true')
          span.sr-only Next
      .row
        each item in item_list 
          .col-lg-4.col-md-6.mb-4
            .card.h-100.d-flex.flex-column.justify-content-between
              a(href=item.url)
                img.card-img-top.img-fluid(
                  src=(item.img_700_400 ? item.img_700_400 : 'https://placehold.it/700x400'), 
                  alt='') 
              .card-body.px-1
                h4.card-title
                  a(href=item.url) #{item.name}
                h5 #{item.formattedPrice}
                p.card-text #{item.description}
              .card-footer 
                form(method='POST' action=item.url+'/add')
                  div.form-group
                    input#itemid.form-control(
                      type='hidden'
                      name='id'
                      required='true'
                      value=item._id
                      )
                  button.btn.btn-primary.btn-block(type='submit') Add to Cart

