extends layout

block main
  h1=title

  form(method='POST' action='')
    div.form-group
      label('item_name') Item Name:
      input#item_name.form-control(
        type='text' 
        placeholder='item name (select a name)' 
        name='item_name'
        required='true' 
        value=(undefined===item ? '' : item.name) 
        )
      label(for='description') Description:
      input#description.form-control(
        type='text' 
        placeholder='description (7 to 256 characters)' 
        name='description' 
        required='true' 
        value=(undefined===item ? '' : item.description)
        )
      label(for='price') Price:
      input#price.form-control(
        type='text' 
        placeholder='price (put your price address)' 
        name='price' 
        required='true' 
        value=(undefined===item ? '' : item.price)
        )
    div.form-group
      label Group:
      div
        for group in item_groups
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(
              type='checkbox'
              name='item_groups'
              id=group._id
              value=group._id
              checked=group.checked
              )
            label(for=group._id) #{group.name}
    button.btn.btn-primary(type='submit') Submit

block alert
  if errors 
    ul
      for error in errors
        li!= error.msg