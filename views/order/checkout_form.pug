extends ../layout

block main
  h1= title

  ul
  each element in user_cart
    li
      a(href=element.item.url) #{element.item.name}
  else
    li There are no items.
  form(action="/store/charge", method="post")
      article
        label Amount: $#{cart_total}
      script(
        src="//checkout.stripe.com/v2/checkout.js",
        class="stripe-button",
        data-key=keyPublishable,
        data-locale="auto",
        data-description="Sample Charge",
        data-amount="500"
        )